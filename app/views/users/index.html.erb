<div>
	<br/>
	<table class="table table-bordered table-striped">
	  	<thead>
		  <tr>
			<th>Id</th>
			<th>Name</th>
			<th>Email</th>
			<th>Password Hash</th>
			<th></th>
		  </tr>
		</thead>
		<tbody>
		<% @users.each do |user| %>
		  <tr>
			<td><%= user.id %></td>
			<td><%= user.name %></td>
			<td><%= user.email %></td>
			<td><%= user.password_digest %></td>
			<td width="150px" style="text-align:center">
				<%= link_to 'Show', user_path(user.id) %>
			</td>
		  </tr>
		<% end %>
		</tbody>
	</table>
</div>